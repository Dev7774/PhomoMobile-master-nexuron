{
  "expo": {
    "name": "PhomoCam",
    "slug": "PhomoMobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "phomomobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-gradient.png",
      "resizeMode": "cover",
      "backgroundColor": "#0C0C0C",
      "dark": {
        "image": "./assets/images/splash-gradient-dark.png",
        "resizeMode": "cover",
        "backgroundColor": "#0C0C0C"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.prasiddha123.Phomo",
      "userInterfaceStyle": "automatic",
      "splash": {
        "image": "./assets/images/splash-gradient.png",
        "resizeMode": "cover",
        "backgroundColor": "#0C0C0C",
        "dark": {
          "image": "./assets/images/splash-gradient-dark.png",
          "resizeMode": "cover",
          "backgroundColor": "#0C0C0C"
        }
      },
      "associatedDomains": [
        "applinks:phomo.camera",
        "applinks:www.phomo.camera"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "Allow PhomoCam to use your camera to take photos that can be shared with friends in your events.",
        "NSMicrophoneUsageDescription": "Allow PhomoCam to access your microphone for taking videos with audio",
        "NSPhotoLibraryUsageDescription": "Allow PhomoCam to access your photo library so you can sync photos or choose a profile photo",
        "NSPhotoLibraryAddUsageDescription": "Allow PhomoCam to save photos to your photo library and create a PhomoCam album",
        "NSLocationWhenInUseUsageDescription": "PhomoCam does not access your location. This permission is required by underlying frameworks but is not used by the app.",
        "NSUserNotificationUsageDescription": "Allow PhomoCam to send you notifications about shared photos and friend activities",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["fetch"]
      },
      "usesAppleSignIn": true
    },
    "android": {
      "userInterfaceStyle": "automatic",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "image": "./assets/images/splash-gradient.png",
        "resizeMode": "cover",
        "backgroundColor": "#0C0C0C",
        "dark": {
          "image": "./assets/images/splash-gradient-dark.png",
          "resizeMode": "cover",
          "backgroundColor": "#0C0C0C"
        }
      },
      "edgeToEdgeEnabled": true,
      "package": "com.prasiddha123.Phomo",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "splash": {
        "image": "./assets/images/icon_copy.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Allow PhomoCam to access your camera",
          "microphonePermissionText": "Allow PhomoCam to access your microphone",
          "enableMicrophonePermission": true
        }
      ],
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-background-task",
      "expo-notifications",
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c5969cec-1b5e-4435-b6df-486d63d6c53d"
      }
    },
    "owner": "prasiddha123"
  }
}
